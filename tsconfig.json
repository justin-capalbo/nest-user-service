{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "rootDir": "./src",
        "baseUrl": ".",
        "noEmit": true,
        "paths": {
            "@app/*": [
                "./src/*"
            ]
        },
        "emitDecoratorMetadata": true,
        "strict": true
    },
    "exclude": [
        "node_modules"
    ]
}
